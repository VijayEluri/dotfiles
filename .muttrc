set timeout=300
set mail_check=300
set sort=threads
#set sort_aux=reverse-last-date-received
set mark_old=no
set fast_reply=yes
set include=yes
set forward_quote=yes
set forward_format="FWD: %s"

# IMAP configuration

set realname="Peter Hua"
set from="Peter Hua <pehua01@gmail.com>"
set imap_user=pehua01@gmail.com
#set imap_pass=

set folder=imaps://imap.gmail.com
set spoolfile=+INBOX
#set mbox_type=mbox
#set mbox="+[Gmail]/All Mail"   # [un]set move
set record="+[Gmail]/Sent Mail" # [un]set copy
set postponed=+[Gmail]/Drafts   # [un]set postpone
#set trash=+[Gmail]/Trash       # requires [trash_folder_patch]

mailboxes =INBOX

set imap_passive=no
set imap_keepalive=300

# SMTP configuration

set smtp_url=smtps://pehua01\@gmail.com@smtp.gmail.com:465
#set smtp_pass=

#set ssl_starttls=yes
set ssl_force_tls=yes

# Options

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/messages
set certificate_file=~/.mutt/certificates

source ~/.mutt/colors

set alias_file=~/.mutt/aliases
source ~/.mutt/aliases

#ignore *
#unignore Date: From: To: CC: Bcc: Subject: User-Agent: X-Mailer:
#hdr_order Date: From: To: CC: Bcc: Subject: User-Agent: X-Mailer:
#set index_format="%{%b %d} %-15.15L [%Z] %s"

macro index,pager gi "<change-folder>=INBOX<enter>" "Inbox"
macro index,pager gr "<change-folder>=[Gmail]/Sent Mail<enter>" "Sent"
macro index,pager gs "<change-folder>=[Gmail]/Starred<enter>" "Starred"
macro index,pager gp "<change-folder>=[Gmail]/Drafts<enter>" "Drafts"
macro index,pager ga "<change-folder>=[Gmail]/All Mail<enter>" "All Mail"
