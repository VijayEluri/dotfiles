URxvt.geometry:80x24
URxvt.loginShell:true
URxvt.saveLines:8192
URxvt.visualBell:true

URxvt.background:black
URxvt.foreground:white
URxvt.transparent:true
URxvt.tintColor:blue
URxvt.shading:40
URxvt.depth:32

urxvt.font:xft:Bitstream Vera Sans Mono:autohint=true
urxvt.boldFont:xft:Bitstream Vera Sans Mono:bold:autohint=true
urxvt.italicFont:xft:Bitstream Vera Sans Mono:italic:autohint=true
urxvt.boldItalicFont:xft:Bitstream Vera Sans Mono:bold:italic:autohint=true

URxvt.scrollBar:true
URxvt.jumpScroll:true
URxvt.skipScroll:true
URxvt.scrollstyle:plain
URxvt.secondaryScroll:true

xft*antialias:1

dzen2.font:xft:Bitstream Vera Sans Mono
dzen2.foreground:blue
dzen2.background:black

emacs*font:DejaVu Sans Mono
emacs*fontBackend:xft,x
emacs*fullscreen:fullboth
