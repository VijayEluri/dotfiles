! /usr/share/icons
! Xcursor.theme:oxygen
! Xcursor.size:16

Xft.antialias:True
Xft.hinting:True
Xft.hintstyle:hintslight
Xft.rgba:rgb

URxvt*buffered:True
URxvt*depth:32
URxvt*geometry:80x24
URxvt*loginShell:True
URxvt*saveLines:8192
URxvt*urgentOnBell:True
URxvt*visualBell:True

URxvt*background:rgba:0000/0000/0000/cccc
URxvt*foreground:white
URxvt*transparent:True
URxvt*fading:50
URxvt*fadeColor:black
URxvt*tintColor:green
URxvt*shading:50

! /usr/share/fonts/.../fonts.alias
URxvt*font:xft:Bitstream Vera Sans Mono-10
URxvt*boldFont:xft:Bitstream Vera Sans Mono-10:bold
URxvt*italicFont:xft:Bitstream Vera Sans Mono-10:italic
URxvt*boldItalicFont:xft:Bitstream Vera Sans Mono-10:bold:italic

URxvt*scrollBar:False
URxvt*scrollstyle:plain
URxvt*jumpScroll:True
URxvt*skipScroll:True
URxvt*scrollTtyOutput:False
URxvt*scrollWithBuffer:True
URxvt*scrollTtyKeypress:True

! autocutsel xsel clipboard
! URxvt.perl-ext-common:default,clipboard

! urxvt-url-select
URxvt.perl-ext:default,url-select
URxvt.keysym.M-u:perl:url-select:select_next
URxvt.urlLauncher:/usr/bin/firefox
URxvt.underlineURLs:True

Emacs*background:black
Emacs*foreground:white
Emacs*font:DejaVu Sans Mono-10
Emacs*fontBackend:xft,x
Emacs*fullscreen:fullboth

dzen2*font:xft:Bitstream Vera Sans Mono
dzen2*foreground:blue
dzen2*background:black
